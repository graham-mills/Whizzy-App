@model WhizzyApp.Models.Presentation

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <b>Select Image</b>
        </div>
        <div class="modal-body">
                <h6>Select or upload an image</h6>
                @{
                    if (Model.Images.Count > 0)
                    {
                        <ul id="image-select-grid" class="container">
                            @foreach (WhizzyApp.Models.Image image in Model.Images)
                            {
                            <li class="image-select-img" data-name="@image.Filename.ToString()" data-id="@image.Id.ToString()" data-width="@image.Width.ToString()" data-height="@image.Height.ToString()" style="background-image:url('@Url.Content(image.Filepath)');">
                                <p>@image.Filename<button class="btn btn-danger btn-xs btn_imagedelete" data-id="@image.Id.ToString()" data-toggle="tooltip" data-placement="left" title="Delete image">&times;</button></p>
                            </li>
                            }
                        </ul>
                    }
                }
            <form id="image-upload-form" enctype="multipart/form-data" class="form-inline">
                <input type="hidden" name="presentationId" value="@Model.Id" id="presentationId" />
                <input class="form-control" type="file" name="image" id="image" />
                <input type="submit" class="btn btn-primary" value="Upload" />
            </form>
        </div>
        <div class="modal-footer">
            <p id="image-select-label"></p>
            <button class="btn btn-default" data-dismiss="modal" aria-label="Close">Cancel</button>
            <button id="btn_imageselect" class="btn btn-primary" data-dismiss="modal">Insert</button>
        </div>
    </div>
</div>